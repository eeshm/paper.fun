# ====================
# PRODUCTION ENVIRONMENT
# ====================

# Database
DATABASE_URL="REPLACE_WITH_RAILWAY_POSTGRES_URL"

# Redis
REDIS_URL="REPLACE_WITH_RAILWAY_REDIS_URL"

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET="GENERATE_A_STRONG_SECRET_HERE"

# Pyth Network
PYTH_NETWORK_URL="https://hermes.pyth.network"

# API Configuration
PORT=3000
WS_PORT=3001
NODE_ENV="production"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# CORS (Update with your Vercel domain)
CORS_ORIGIN="https://your-vercel-domain.vercel.app"

# Frontend URLs (Set in Vercel, not Railway)
# NEXT_PUBLIC_API_URL="https://api-production-xxxx.up.railway.app"
# NEXT_PUBLIC_WS_URL="wss://websocket-production-xxxx.up.railway.app"
